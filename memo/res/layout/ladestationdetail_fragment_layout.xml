<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bezeichnung:" />

                <EditText
                    android:id="@+id/ladestationdetail_fragment_layout_textView_bezeichnung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:text="Bezeichnung" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kommentar:" />

                <EditText
                    android:id="@+id/ladestationdetail_fragment_layout_textView_kommentar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:inputType="textMultiLine"
                    android:text="Kommentar" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ladestationdetail_fragment_layout_imageView_foto"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_weight="0.5"
                android:scaleType="fitCenter"
                android:src="@drawable/dot" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verfügbarkeit" />

        <EditText
            android:id="@+id/ladestationdetail_fragment_layout_textView_verfuegbarkeit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="Verfügbarkeit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zugang:" />

        <EditText
            android:id="@+id/ladestationdetail_fragment_layout_textView_zugangstyp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="Zugangstyp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ladestationdetail_fragment_layout_imageView_logo"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_weight="0.5"
                android:scaleType="fitCenter"
                android:src="@drawable/dot" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preis:" />

            <EditText
                android:id="@+id/ladestationdetail_fragment_layout_textView_preis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:focusable="false"
                android:text="Preis" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Land:" />

        <EditText
            android:id="@+id/ladestationdetail_fragment_layout_textView_land"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="Land" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLZ:" />

        <EditText
            android:id="@+id/ladestationdetail_fragment_layout_textView_plz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="PLZ" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ort:" />

        <EditText
            android:id="@+id/ladestationdetail_fragment_layout_textView_ort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="Ort" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Straße:" />

        <EditText
            android:id="@+id/ladestationdetail_fragment_layout_textView_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="Straße" />
    </LinearLayout>

</ScrollView>